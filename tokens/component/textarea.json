{
  "component": {
    "textarea": {
      "fontFamily": {
        "default": {
          "$type": "fontFamilies",
          "$value": "{app.fontFamily.control.text}"
        }
      },
      "fontWeight": {
        "input": {
          "$type": "fontWeights",
          "$value": "{app.fontWeight.control.text.alt}"
        },
        "label": {
          "$type": "fontWeights",
          "$value": "{app.fontWeight.label.text.default}"
        }
      },
      "lineHeight": {
        "input": {
          "$type": "lineHeights",
          "$value": "{app.lineHeight.default}"
        },
        "label": {
          "$type": "lineHeights",
          "$value": "{app.lineHeight.none}"
        },
        "leading": {
          "reset": {
            "$type": "lineHeights",
            "$value": "100%"
          }
        }
      },
      "fontSize": {
        "input": {
          "xs": {
            "$type": "fontSizes",
            "$value": "{component.textarea.fontSize.input.sm} - {component.textarea.config.text.step}"
          },
          "sm": {
            "$type": "fontSizes",
            "$value": "{component.textarea.fontSize.input.md} - {component.textarea.config.text.step}"
          },
          "md": {
            "$type": "fontSizes",
            "$value": "{app.fontSize.control.text.sm}"
          },
          "lg": {
            "$type": "fontSizes",
            "$value": "{component.textarea.fontSize.input.md} + {component.textarea.config.text.step}"
          }
        },
        "label": {
          "xs": {
            "$type": "fontSizes",
            "$value": "{app.fontSize.label.text.xs}"
          },
          "sm": {
            "$type": "fontSizes",
            "$value": "{app.fontSize.label.text.sm}"
          },
          "md": {
            "$type": "fontSizes",
            "$value": "{app.fontSize.label.text.sm}"
          },
          "lg": {
            "$type": "fontSizes",
            "$value": "{app.fontSize.label.text.sm}"
          }
        }
      },
      "letterSpacing": {
        "default": {
          "$type": "letterSpacing",
          "$value": "{app.letterSpacing.control.text}"
        }
      },
      "textCase": {
        "default": {
          "$type": "textCase",
          "$value": "{app.textCase.control.default}"
        }
      },
      "color": {
        "default": {
          "bg": {
            "default": {
              "$type": "color",
              "$value": "transparent"
            }
          },
          "border": {
            "default": {
              "$type": "color",
              "$value": "{app.color.component.primary.border.translucent.default}"
            }
          },
          "fg": {
            "default": {
              "$type": "color",
              "$value": "{app.color.surface.fg.default}"
            },
            "muted": {
              "$type": "color",
              "$value": "{app.color.surface.fg.muted}"
            },
            "label": {
              "$type": "color",
              "$value": "{app.color.component.primary.fg.subtle.default}"
            }
          }
        },
        "focus": {
          "border": {
            "default": {
              "$type": "color",
              "$value": "{app.color.component.focus.border.default}"
            }
          },
          "fg": {
            "label": {
              "$type": "color",
              "$value": "{app.color.component.primary.fg.subtle.default}"
            }
          }
        },
        "danger": {
          "bg": {
            "default": {
              "$type": "color",
              "$value": "{app.color.component.danger.bg.translucent.default}"
            }
          },
          "border": {
            "default": {
              "$type": "color",
              "$value": "{app.color.component.danger.border.solid.default}"
            }
          },
          "fg": {
            "default": {
              "$type": "color",
              "$value": "{app.color.component.danger.fg.solid.default}"
            },
            "muted": {
              "$type": "color",
              "$value": "{app.color.component.danger.fg.muted}"
            },
            "label": {
              "$type": "color",
              "$value": "{app.color.component.danger.fg.muted}"
            }
          }
        },
        "disabled": {
          "bg": {
            "default": {
              "$type": "color",
              "$value": "transparent"
            }
          },
          "border": {
            "default": {
              "$type": "color",
              "$value": "{app.color.component.disabled.border.translucent}"
            }
          },
          "fg": {
            "default": {
              "$type": "color",
              "$value": "{app.color.component.disabled.fg.solid}"
            },
            "label": {
              "$type": "color",
              "$value": "{app.color.component.disabled.fg.solid}"
            }
          }
        }
      },
      "dimension": {
        "minHeight": {
          "xs": {
            "$type": "dimension",
            "$value": "{app.dimension.control.height.xs} * 2"
          },
          "sm": {
            "$type": "dimension",
            "$value": "{app.dimension.control.height.sm} * 2"
          },
          "md": {
            "$type": "dimension",
            "$value": "{app.dimension.control.height.md} * 2"
          },
          "lg": {
            "$type": "dimension",
            "$value": "{app.dimension.control.height.lg} * 2"
          }
        },
        "maxHeight": {
          "xs": {
            "$type": "dimension",
            "$value": "{app.dimension.control.height.xs} * 6"
          },
          "sm": {
            "$type": "dimension",
            "$value": "{app.dimension.control.height.xs} * 6"
          },
          "md": {
            "$type": "dimension",
            "$value": "{app.dimension.control.height.xs} * 6"
          },
          "lg": {
            "$type": "dimension",
            "$value": "{app.dimension.control.height.xs} * 6"
          }
        },
        "padding": {
          "x": {
            "xs": {
              "$type": "dimension",
              "$value": "{app.dimension.control.padding.xs}"
            },
            "sm": {
              "$type": "dimension",
              "$value": "{app.dimension.control.padding.sm}"
            },
            "md": {
              "$type": "dimension",
              "$value": "{app.dimension.control.padding.md}"
            },
            "lg": {
              "$type": "dimension",
              "$value": "{app.dimension.control.padding.lg}"
            }
          },
          "y": {
            "default": {
              "xs": {
                "$type": "dimension",
                "$value": "{app.dimension.control.padding.xs}"
              },
              "sm": {
                "$type": "dimension",
                "$value": "{app.dimension.control.padding.sm}"
              },
              "md": {
                "$type": "dimension",
                "$value": "{app.dimension.control.padding.md}"
              },
              "lg": {
                "$type": "dimension",
                "$value": "{app.dimension.control.padding.lg}"
              }
            },
            "filled": {
              "xs": {
                "$type": "dimension",
                "$value": "{app.dimension.control.padding.xs} / 2"
              },
              "sm": {
                "$type": "dimension",
                "$value": "{app.dimension.control.padding.sm} / 2"
              },
              "md": {
                "$type": "dimension",
                "$value": "{app.dimension.control.padding.md} / 2"
              },
              "lg": {
                "$type": "dimension",
                "$value": "{app.dimension.control.padding.lg} / 2"
              }
            }
          },
          "label": {
            "xs": {
              "$type": "dimension",
              "$value": "4px"
            },
            "sm": {
              "$type": "dimension",
              "$value": "4px"
            },
            "md": {
              "$type": "dimension",
              "$value": "4px"
            },
            "lg": {
              "$type": "dimension",
              "$value": "4px"
            }
          }
        },
        "gap": {
          "label": {
            "xs": {
              "$type": "dimension",
              "$value": "{component.textarea.dimension.gap.label.sm} - {component.textarea.config.gap.label.step}"
            },
            "sm": {
              "$type": "dimension",
              "$value": "{component.textarea.dimension.gap.label.md} - {component.textarea.config.gap.label.step}"
            },
            "md": {
              "$type": "dimension",
              "$value": "{app.dimension.control.gap.sm}"
            },
            "lg": {
              "$type": "dimension",
              "$value": "{component.textarea.dimension.gap.label.md} + {component.textarea.config.gap.label.step}"
            }
          }
        },
        "radius": {
          "xs": {
            "$type": "dimension",
            "$value": "{app.dimension.control.radius.xs}"
          },
          "sm": {
            "$type": "dimension",
            "$value": "{app.dimension.control.radius.sm}"
          },
          "md": {
            "$type": "dimension",
            "$value": "{app.dimension.control.radius.md}"
          },
          "lg": {
            "$type": "dimension",
            "$value": "{app.dimension.control.radius.lg}"
          }
        },
        "border": {
          "xs": {
            "$type": "dimension",
            "$value": "{app.dimension.control.border.default}"
          },
          "sm": {
            "$type": "dimension",
            "$value": "{app.dimension.control.border.default}"
          },
          "md": {
            "$type": "dimension",
            "$value": "{app.dimension.control.border.default}"
          },
          "lg": {
            "$type": "dimension",
            "$value": "{app.dimension.control.border.default}"
          }
        },
        "blur": {
          "default": {
            "$type": "dimension",
            "$value": "1rem"
          }
        }
      },
      "config": {
        "text": {
          "step": {
            "$type": "other",
            "$value": "0.0625rem"
          }
        },
        "gap": {
          "label": {
            "step": {
              "$type": "other",
              "$value": "0.0625rem"
            }
          }
        }
      },
      "boxShadow": {
        "focusRing": {
          "$type": "boxShadow",
          "$value": "{app.boxShadow.focusRing.md}"
        }
      }
    }
  }
}