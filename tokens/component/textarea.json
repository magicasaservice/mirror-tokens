{
  "component": {
    "textarea": {
      "fontFamily": {
        "default": {
          "$value": "{app.fontFamily.component.text}",
          "$type": "fontFamilies"
        }
      },
      "fontWeight": {
        "input": {
          "$value": "{app.fontWeight.component.text.default}",
          "$type": "fontWeights"
        },
        "label": {
          "$value": "{app.fontWeight.component.text.default}",
          "$type": "fontWeights"
        }
      },
      "lineHeight": {
        "input": {
          "$value": "{app.lineHeight.default}",
          "$type": "lineHeights"
        },
        "label": {
          "$value": "{app.lineHeight.none}",
          "$type": "lineHeights"
        },
        "leading": {
          "reset": {
            "$value": "100%",
            "$type": "lineHeights"
          }
        }
      },
      "fontSize": {
        "input": {
          "xs": {
            "$value": "{component.textarea.fontSize.input.sm} - 0.0625rem",
            "$type": "fontSizes"
          },
          "sm": {
            "$value": "{component.textarea.fontSize.input.md} - 0.0625rem",
            "$type": "fontSizes"
          },
          "md": {
            "$value": "{app.fontSize.component.text.lg}",
            "$type": "fontSizes"
          },
          "lg": {
            "$value": "{component.textarea.fontSize.input.md} + 0.0625rem",
            "$type": "fontSizes"
          }
        },
        "label": {
          "xs": {
            "$value": "{app.fontSize.component.text.3xs}",
            "$type": "fontSizes"
          },
          "sm": {
            "$value": "{app.fontSize.component.text.2xs}",
            "$type": "fontSizes"
          },
          "md": {
            "$value": "{app.fontSize.component.text.2xs}",
            "$type": "fontSizes"
          },
          "lg": {
            "$value": "{app.fontSize.component.text.2xs}",
            "$type": "fontSizes"
          }
        }
      },
      "letterSpacing": {
        "default": {
          "$value": "{app.letterSpacing.component.default}",
          "$type": "letterSpacing"
        }
      },
      "textCase": {
        "default": {
          "$value": "{app.textCase.component.default}",
          "$type": "textCase"
        }
      },
      "color": {
        "default": {
          "bg": {
            "default": {
              "$value": "transparent",
              "$type": "color"
            }
          },
          "border": {
            "default": {
              "$value": "{app.color.component.primary.border.translucent.default}",
              "$type": "color"
            }
          },
          "fg": {
            "default": {
              "$value": "{app.color.component.primary.fg.solid.default}",
              "$type": "color"
            },
            "label": {
              "$value": "{app.color.component.primary.fg.muted.default}",
              "$type": "color"
            }
          }
        },
        "focus": {
          "border": {
            "default": {
              "$value": "{app.color.component.focus.border.default}",
              "$type": "color"
            }
          },
          "outline": {
            "default": {
              "$value": "{app.color.component.focus.outline.default}",
              "$type": "color"
            }
          }
        },
        "danger": {
          "bg": {
            "default": {
              "$value": "{app.color.component.danger.bg.translucent.default}",
              "$type": "color"
            }
          },
          "border": {
            "default": {
              "$value": "{app.color.component.danger.border.translucent.default}",
              "$type": "color"
            }
          },
          "fg": {
            "default": {
              "$value": "{app.color.component.danger.fg.onTranslucent.default}",
              "$type": "color"
            },
            "label": {
              "$value": "{app.color.component.danger.fg.subtle.default}",
              "$type": "color"
            }
          }
        },
        "disabled": {
          "bg": {
            "default": {
              "$value": "transparent",
              "$type": "color"
            }
          },
          "border": {
            "default": {
              "$value": "{app.color.component.disabled.border.translucent.default}",
              "$type": "color"
            }
          },
          "fg": {
            "default": {
              "$value": "{app.color.component.disabled.fg.solid.default}",
              "$type": "color"
            },
            "label": {
              "$value": "{app.color.component.disabled.fg.muted.default}",
              "$type": "color"
            }
          }
        }
      },
      "dimension": {
        "minHeight": {
          "xs": {
            "$value": "{app.dimension.component.height.md} * 2",
            "$type": "dimension"
          },
          "sm": {
            "$value": "{app.dimension.component.height.lg} * 2",
            "$type": "dimension"
          },
          "md": {
            "$value": "{app.dimension.component.height.xl} * 2",
            "$type": "dimension"
          },
          "lg": {
            "$value": "{app.dimension.component.height.2xl} * 2",
            "$type": "dimension"
          }
        },
        "maxHeight": {
          "xs": {
            "$value": "{app.dimension.component.height.md} * 6",
            "$type": "dimension"
          },
          "sm": {
            "$value": "{app.dimension.component.height.md} * 6",
            "$type": "dimension"
          },
          "md": {
            "$value": "{app.dimension.component.height.md} * 6",
            "$type": "dimension"
          },
          "lg": {
            "$value": "{app.dimension.component.height.md} * 6",
            "$type": "dimension"
          }
        },
        "padding": {
          "x": {
            "xs": {
              "$value": "{app.dimension.component.padding.xs}",
              "$type": "dimension"
            },
            "sm": {
              "$value": "{app.dimension.component.padding.sm}",
              "$type": "dimension"
            },
            "md": {
              "$value": "{app.dimension.component.padding.md}",
              "$type": "dimension"
            },
            "lg": {
              "$value": "{app.dimension.component.padding.lg}",
              "$type": "dimension"
            }
          },
          "y": {
            "default": {
              "xs": {
                "$value": "{app.dimension.component.padding.xs}",
                "$type": "dimension"
              },
              "sm": {
                "$value": "{app.dimension.component.padding.sm}",
                "$type": "dimension"
              },
              "md": {
                "$value": "{app.dimension.component.padding.md}",
                "$type": "dimension"
              },
              "lg": {
                "$value": "{app.dimension.component.padding.lg}",
                "$type": "dimension"
              }
            },
            "filled": {
              "xs": {
                "$value": "{app.dimension.component.padding.xs} / 2",
                "$type": "dimension"
              },
              "sm": {
                "$value": "{app.dimension.component.padding.sm} / 2",
                "$type": "dimension"
              },
              "md": {
                "$value": "{app.dimension.component.padding.md} / 2",
                "$type": "dimension"
              },
              "lg": {
                "$value": "{app.dimension.component.padding.lg} / 2",
                "$type": "dimension"
              }
            }
          },
          "label": {
            "xs": {
              "$value": "4px",
              "$type": "dimension"
            },
            "sm": {
              "$value": "4px",
              "$type": "dimension"
            },
            "md": {
              "$value": "4px",
              "$type": "dimension"
            },
            "lg": {
              "$value": "4px",
              "$type": "dimension"
            }
          }
        },
        "gap": {
          "label": {
            "xs": {
              "$value": "{component.textarea.dimension.gap.label.sm} - 0.0625rem",
              "$type": "dimension"
            },
            "sm": {
              "$value": "{component.textarea.dimension.gap.label.md} - 0.0625rem",
              "$type": "dimension"
            },
            "md": {
              "$value": "{app.dimension.component.gap.sm}",
              "$type": "dimension"
            },
            "lg": {
              "$value": "{component.textarea.dimension.gap.label.md} + 0.0625rem",
              "$type": "dimension"
            }
          }
        },
        "radius": {
          "xs": {
            "$value": "{app.dimension.component.radius.xs}",
            "$type": "dimension"
          },
          "sm": {
            "$value": "{app.dimension.component.radius.sm}",
            "$type": "dimension"
          },
          "md": {
            "$value": "{app.dimension.component.radius.md}",
            "$type": "dimension"
          },
          "lg": {
            "$value": "{app.dimension.component.radius.lg}",
            "$type": "dimension"
          }
        },
        "border": {
          "xs": {
            "$value": "{app.dimension.component.border.default}",
            "$type": "dimension"
          },
          "sm": {
            "$value": "{app.dimension.component.border.default}",
            "$type": "dimension"
          },
          "md": {
            "$value": "{app.dimension.component.border.default}",
            "$type": "dimension"
          },
          "lg": {
            "$value": "{app.dimension.component.border.default}",
            "$type": "dimension"
          }
        },
        "outline": {
          "focus": {
            "default": {
              "$value": "{app.dimension.component.outline.focus.md}",
              "$type": "dimension"
            }
          }
        },
        "blur": {
          "default": {
            "$value": "1rem",
            "$type": "dimension"
          }
        }
      }
    }
  }
}
