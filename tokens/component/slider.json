{
  "component": {
    "slider": {
      "fontFamily": {
        "default": {
          "$type": "fontFamilies",
          "$value": "{app.fontFamily.control.text}"
        },
        "number": {
          "$type": "fontFamilies",
          "$value": "{app.fontFamily.control.number}"
        }
      },
      "fontWeight": {
        "label": {
          "$type": "fontWeights",
          "$value": "{app.fontWeight.control.text.default}"
        },
        "number": {
          "$type": "fontWeights",
          "$value": "{app.fontWeight.control.number.default}"
        }
      },
      "lineHeight": {
        "label": {
          "$type": "lineHeights",
          "$value": "{app.lineHeight.default}"
        },
        "number": {
          "$type": "lineHeights",
          "$value": "{app.lineHeight.default}"
        }
      },
      "dimension": {
        "track": {
          "height": {
            "$type": "dimension",
            "$value": "{component.slider.config.track.height}"
          },
          "border": {
            "$type": "dimension",
            "$value": "{app.dimension.control.border.thin}"
          },
          "radius": {
            "$type": "dimension",
            "$value": "{component.slider.config.track.radius}"
          }
        },
        "container": {
          "height": {
            "$type": "dimension",
            "$value": "{component.slider.config.container.height}"
          },
          "padding": {
            "$type": "dimension",
            "$value": "{component.slider.dimension.handle.height} * 0.5"
          },
          "gap": {
            "$type": "dimension",
            "$value": "{component.slider.dimension.handle.height} * 0.5"
          }
        },
        "handle": {
          "height": {
            "$type": "dimension",
            "$value": "{component.slider.config.handle.height}"
          },
          "width": {
            "$type": "dimension",
            "$value": "{component.slider.config.handle.height} * {component.slider.config.handle.ratio}"
          },
          "border": {
            "$type": "dimension",
            "$value": "{app.dimension.control.border.thin}"
          },
          "radius": {
            "$type": "dimension",
            "$value": "{component.slider.config.handle.radius}"
          },
          "pressed": {
            "height": {
              "$type": "dimension",
              "$value": "{component.slider.dimension.handle.height} * {component.slider.config.handle.pressed}"
            },
            "width": {
              "$type": "dimension",
              "$value": "{component.slider.dimension.handle.width} * {component.slider.config.handle.pressed}"
            }
          }
        },
        "step": {
          "height": {
            "$type": "dimension",
            "$value": "{component.slider.config.track.height} - {component.slider.config.step.padding} * 2"
          },
          "width": {
            "$type": "dimension",
            "$value": "{component.slider.dimension.step.height} * {component.slider.config.step.ratio}"
          },
          "radius": {
            "$type": "dimension",
            "$value": "{component.slider.config.track.radius} - {component.slider.config.step.padding}"
          }
        },
        "target": {
          "default": {
            "$type": "dimension",
            "$value": "{component.slider.dimension.container.height} + {component.slider.dimension.container.padding}"
          }
        },
        "symbol": {
          "default": {
            "$type": "dimension",
            "$value": "{component.button.fontSize.symbol.sm}"
          }
        }
      },
      "config": {
        "track": {
          "height": {
            "$type": "other",
            "$value": "0.25rem",
            "$description": "-0.5 for material design style (handle is offset)"
          },
          "radius": {
            "$type": "other",
            "$value": "0.25rem",
            "$description": "for 100% roundness make equal to height md"
          }
        },
        "handle": {
          "height": {
            "$type": "other",
            "$value": "0.875rem"
          },
          "radius": {
            "$type": "other",
            "$value": "1rem",
            "$description": "for 100% roundness make half of pressed height"
          },
          "ratio": {
            "$type": "other",
            "$value": "1"
          },
          "pressed": {
            "$type": "other",
            "$value": "1.125"
          }
        },
        "step": {
          "padding": {
            "$type": "other",
            "$value": "0.0625rem"
          },
          "ratio": {
            "$type": "other",
            "$value": "1"
          }
        },
        "container": {
          "height": {
            "$type": "other",
            "$value": "{app.dimension.control.height.xs}"
          }
        }
      },
      "color": {
        "default": {
          "track": {
            "bg": {
              "active": {
                "$type": "color",
                "$value": "{app.color.component.primary.fg.solid.default}"
              },
              "inactive": {
                "$type": "color",
                "$value": "{app.color.component.primary.bg.translucent.default}"
              }
            },
            "border": {
              "default": {
                "$type": "color",
                "$value": "transparent"
              }
            }
          },
          "handle": {
            "bg": {
              "default": {
                "$type": "color",
                "$value": "{app.color.component.primary.fg.solid.default}"
              },
              "active": {
                "$type": "color",
                "$value": "{app.color.component.primary.fg.solid.default}"
              }
            },
            "border": {
              "default": {
                "$type": "color",
                "$value": "transparent"
              },
              "focus": {
                "$type": "color",
                "$value": "transparent"
              }
            }
          },
          "step": {
            "active": {
              "$type": "color",
              "$value": "{app.color.surface.elevation.low.bg}"
            },
            "inactive": {
              "$type": "color",
              "$value": "{app.color.surface.fg.subtle}"
            },
            "hidden": {
              "$type": "color",
              "$value": "transparent"
            }
          },
          "label": {
            "fg": {
              "default": {
                "$type": "color",
                "$value": "{app.color.component.primary.fg.solid.default}"
              }
            }
          }
        },
        "disabled": {
          "track": {
            "bg": {
              "active": {
                "$type": "color",
                "$value": "{app.color.component.disabled.border.translucent}"
              },
              "inactive": {
                "$type": "color",
                "$value": "{app.color.component.disabled.border.translucent}"
              }
            },
            "border": {
              "default": {
                "$type": "color",
                "$value": "transparent"
              }
            }
          },
          "handle": {
            "bg": {
              "default": {
                "$type": "color",
                "$value": "{app.color.component.disabled.fg.solid}"
              }
            },
            "border": {
              "default": {
                "$type": "color",
                "$value": "transparent"
              }
            }
          },
          "step": {
            "active": {
              "$type": "color",
              "$value": "{app.color.surface.elevation.base.bg}"
            },
            "inactive": {
              "$type": "color",
              "$value": "{app.color.component.disabled.fg.solid}"
            },
            "hidden": {
              "$type": "color",
              "$value": "transparent"
            }
          },
          "label": {
            "fg": {
              "default": {
                "$type": "color",
                "$value": "{app.color.component.disabled.fg.solid}"
              }
            }
          }
        }
      },
      "boxShadow": {
        "focusRing": {
          "$type": "boxShadow",
          "$value": [
            {
              "x": "0",
              "y": "0",
              "blur": "0",
              "spread": "0.25rem",
              "color": "{app.color.component.primary.fg.subtle.default}",
              "type": "dropShadow"
            }
          ]
        }
      },
      "fontSize": {
        "label": {
          "$type": "fontSizes",
          "$value": "{component.button.fontSize.default.md}"
        },
        "number": {
          "$type": "fontSizes",
          "$value": "{component.button.fontSize.default.sm}"
        }
      },
      "letterSpacing": {
        "label": {
          "$type": "letterSpacing",
          "$value": "{app.letterSpacing.control.text}"
        },
        "number": {
          "$type": "letterSpacing",
          "$value": "{app.letterSpacing.label.number}"
        }
      }
    }
  }
}