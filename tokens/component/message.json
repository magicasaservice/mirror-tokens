{
  "component": {
    "message": {
      "color": {
        "primary": {
          "bg": {
            "default": {
              "$type": "color",
              "$value": "{app.color.surface.elevation.higher.bg}"
            }
          },
          "fg": {
            "default": {
              "$type": "color",
              "$value": "{app.color.component.primary.fg.solid.default}"
            },
            "muted": {
              "$type": "color",
              "$value": "{app.color.component.primary.fg.subtle.default}"
            }
          }
        }
      },
      "fontFamily": {
        "default": {
          "$type": "fontFamilies",
          "$value": "{app.fontFamily.control.text}"
        }
      },
      "fontWeight": {
        "label": {
          "$type": "fontWeights",
          "$value": "{app.fontWeight.control.text.strong}"
        },
        "message": {
          "$type": "fontWeights",
          "$value": "{app.fontWeight.control.text.default}"
        }
      },
      "lineHeight": {
        "default": {
          "$type": "lineHeights",
          "$value": "{app.lineHeight.default}"
        },
        "symbol": {
          "$type": "lineHeights",
          "$value": "{app.lineHeight.none}"
        }
      },
      "fontSize": {
        "label": {
          "$type": "fontSizes",
          "$value": "{app.fontSize.control.text.xs}"
        },
        "message": {
          "$type": "fontSizes",
          "$value": "{app.fontSize.control.text.xs}"
        }
      },
      "dimension": {
        "padding": {
          "x": {
            "$type": "dimension",
            "$value": "0.25rem"
          },
          "y": {
            "$type": "dimension",
            "$value": "0.875rem"
          }
        },
        "gap": {
          "container": {
            "$type": "dimension",
            "$value": "1rem"
          },
          "message": {
            "$type": "dimension",
            "$value": "0.375rem"
          },
          "body": {
            "$type": "dimension",
            "$value": "0.25rem"
          },
          "badge": {
            "$type": "dimension",
            "$value": "0.5rem"
          }
        },
        "radius": {
          "default": {
            "$type": "dimension",
            "$value": "{app.dimension.control.radius.md}"
          }
        },
        "position": {
          "close": {
            "$type": "dimension",
            "$value": "0.5rem"
          }
        }
      },
      "boxShadow": {
        "default": {
          "$type": "boxShadow",
          "$value": "{app.boxShadow.component.higher.strongest}"
        }
      }
    }
  }
}