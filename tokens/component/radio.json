{
  "component": {
    "radio": {
      "color": {
        "unchecked": {
          "default": {
            "bg": {
              "default": {
                "value": "{app.color.surface.elevation.base.bg.default}",
                "type": "color",
                "$extensions": {
                  "studio.tokens": {
                    "modify": {
                      "type": "alpha",
                      "value": "0.2",
                      "space": "hsl"
                    }
                  }
                }
              },
              "active": {
                "value": "{app.color.surface.elevation.base.bg.default}",
                "type": "color",
                "$extensions": {
                  "studio.tokens": {
                    "modify": {
                      "type": "alpha",
                      "value": "0.4",
                      "space": "hsl"
                    }
                  }
                }
              }
            },
            "border": {
              "default": {
                "value": "{app.color.component.neutral.border.translucent}",
                "type": "color"
              },
              "active": {
                "value": "{app.color.component.primary.bg.solid}",
                "type": "color",
                "$extensions": {
                  "studio.tokens": {
                    "modify": {
                      "type": "darken",
                      "value": "{config.color.accent.darken.active}",
                      "space": "hsl"
                    }
                  }
                }
              }
            },
            "fg": {
              "default": {
                "value": "transparent",
                "type": "color"
              },
              "active": {
                "value": "transparent",
                "type": "color"
              }
            }
          },
          "disabled": {
            "bg": {
              "default": {
                "value": "transparent",
                "type": "color"
              }
            },
            "fg": {
              "default": {
                "value": "transparent",
                "type": "color"
              }
            },
            "border": {
              "default": {
                "value": "{app.color.component.disabled.border.translucent}",
                "type": "color"
              }
            }
          }
        },
        "checked": {
          "default": {
            "bg": {
              "default": {
                "value": "{app.color.component.primary.bg.solid}",
                "type": "color"
              },
              "active": {
                "value": "{app.color.component.primary.bg.solid}",
                "type": "color",
                "$extensions": {
                  "studio.tokens": {
                    "modify": {
                      "type": "darken",
                      "value": "{config.color.accent.darken.active}",
                      "space": "hsl"
                    }
                  }
                }
              }
            },
            "border": {
              "default": {
                "value": "transparent",
                "type": "color"
              },
              "active": {
                "value": "transparent",
                "type": "color"
              }
            },
            "fg": {
              "default": {
                "value": "{app.color.component.primary.fg.onSolid}",
                "type": "color"
              },
              "active": {
                "value": "{app.color.component.primary.fg.onSolid}",
                "type": "color"
              }
            }
          },
          "disabled": {
            "bg": {
              "default": {
                "value": "{app.color.component.disabled.bg.translucent}",
                "type": "color"
              }
            },
            "fg": {
              "default": {
                "value": "{app.color.component.disabled.fg.solid}",
                "type": "color"
              }
            },
            "border": {
              "default": {
                "value": "transparent",
                "type": "color"
              }
            }
          }
        }
      },
      "fontSize": {
        "icon": {
          "sm": {
            "value": "{component.radio.dimension.mark.height.sm}",
            "type": "fontSizes"
          },
          "md": {
            "value": "{component.radio.dimension.mark.height.md}",
            "type": "fontSizes"
          },
          "lg": {
            "value": "{component.radio.dimension.mark.height.lg}",
            "type": "fontSizes"
          }
        }
      },
      "dimension": {
        "box": {
          "height": {
            "sm": {
              "value": "{component.radio.dimension.box.height.md} - {component.radio.config.box.height.step}",
              "type": "dimension"
            },
            "md": {
              "value": "{component.radio.config.box.height.default}",
              "type": "dimension"
            },
            "lg": {
              "value": "{component.radio.dimension.box.height.md} + {component.radio.config.box.height.step}",
              "type": "dimension"
            }
          },
          "width": {
            "sm": {
              "value": "{component.radio.dimension.box.height.sm} * {component.radio.config.box.width.ratio}",
              "type": "dimension"
            },
            "md": {
              "value": "{component.radio.dimension.box.height.md} * {component.radio.config.box.width.ratio}",
              "type": "dimension"
            },
            "lg": {
              "value": "{component.radio.dimension.box.height.lg} * {component.radio.config.box.width.ratio}",
              "type": "dimension"
            }
          },
          "radius": {
            "sm": {
              "value": "{component.radio.dimension.box.radius.md} - {component.radio.config.box.radius.step}",
              "type": "dimension"
            },
            "md": {
              "value": "{component.radio.config.box.radius.default}",
              "type": "dimension"
            },
            "lg": {
              "value": "{component.radio.dimension.box.radius.md} + {component.radio.config.box.radius.step}",
              "type": "dimension"
            }
          },
          "border": {
            "sm": {
              "value": "{component.radio.dimension.box.border.md} - {component.radio.config.box.border.step}",
              "type": "dimension"
            },
            "md": {
              "value": "{component.radio.config.box.border.default}",
              "type": "dimension"
            },
            "lg": {
              "value": "{component.radio.dimension.box.border.md} + {component.radio.config.box.border.step}",
              "type": "dimension"
            }
          }
        },
        "mark": {
          "height": {
            "sm": {
              "value": "{component.radio.dimension.box.height.sm} * {component.radio.config.mark.scale}",
              "type": "dimension"
            },
            "md": {
              "value": "{component.radio.dimension.box.height.md} * {component.radio.config.mark.scale}",
              "type": "dimension"
            },
            "lg": {
              "value": "{component.radio.dimension.box.height.lg} * {component.radio.config.mark.scale}",
              "type": "dimension"
            }
          },
          "width": {
            "sm": {
              "value": "{component.radio.dimension.mark.height.sm}",
              "type": "dimension"
            },
            "md": {
              "value": "{component.radio.dimension.mark.height.md}",
              "type": "dimension"
            },
            "lg": {
              "value": "{component.radio.dimension.mark.height.lg}",
              "type": "dimension"
            }
          }
        }
      },
      "config": {
        "box": {
          "height": {
            "default": {
              "value": "{app.dimension.control.height.md} / 2",
              "type": "other"
            },
            "step": {
              "value": "0.5rem",
              "type": "other"
            }
          },
          "radius": {
            "default": {
              "value": "0.75rem",
              "type": "other",
              "description": "For a circle match height / 2"
            },
            "step": {
              "value": "0.25rem",
              "type": "other",
              "description": "match half of height step"
            }
          },
          "width": {
            "ratio": {
              "value": "1",
              "type": "other"
            }
          },
          "border": {
            "default": {
              "value": "0.125rem",
              "type": "other"
            },
            "step": {
              "value": "0rem",
              "type": "other"
            }
          }
        },
        "mark": {
          "scale": {
            "value": "0.75",
            "type": "other"
          }
        }
      },
      "typography": {
        "default": {
          "value": "{component.button.typography.symbol.default}",
          "type": "typography"
        }
      }
    }
  }
}